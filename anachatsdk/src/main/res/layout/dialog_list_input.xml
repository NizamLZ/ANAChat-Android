<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/ana_primary"
        android:gravity="center"
        android:text="Select From Options"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <SearchView
        android:id="@+id/sv_searchtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:background="@color/white"
        android:imeOptions="actionSearch"
        android:iconifiedByDefault="false"
        android:queryHint="enter search text">

    </SearchView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/input_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv_searchtext"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_list"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_rounded_corners"
            android:gravity="center"
            android:text="@string/label_save"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>